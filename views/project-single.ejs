<!DOCTYPE html>
<html lang="en">
  <head>
    <% include header.ejs %>
  </head>
  <body>
  <% include navbar.ejs %>
   <div id="hero-image-single" style="background-image:url('/images/<%= project.hero_image %>')">
       <h1 id="hero-title"><%= title %> </h1>
   </div>
  
    <div class="content-padding clearfix">
        <div class="poster-wrapper">
            <img src="/images/<%= project.poster %>" class="img-responsive" alt="">
        </div>
        
        <div class="description-wrapper">
            <div class="description">
                <h2 class="movie-header">
                    Description
                </h2>
                <p><%= project.description%></p>
            </div>
            
        <div class="main_characters">
            <h2 class="movie-header">Main Characters</h2>
                <ul>
                    <% for (var i=0; i < main_characters.length; i++){%>
                        <li> <%= main_characters[i] %> </li>
                    <% } %>
                </ul>
        </div>
        </div>
    </div>
         
         <% include footer.ejs %>
        <% include script.ejs %>
  </body>
  
</html>